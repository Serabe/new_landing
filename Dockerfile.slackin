FROM node:6.10-alpine

ENV PORT 3000
ENV SLACK_API_TOKEN xoxp-181480530049-182149602533-182152146933-60141b98204d136812080c0e5a7ceb01
ENV SLACK_SUBDOMAIN sourced-community

RUN mkdir -p /srv

RUN apk update && apk upgrade && \
    apk add --no-cache bash git openssh

RUN git clone https://github.com/rauchg/slackin.git /srv/www

WORKDIR /srv/www

RUN npm install --unsafe-perm

EXPOSE 3000

CMD ./bin/slackin --coc "$SLACK_COC" --port $PORT $SLACK_SUBDOMAIN $SLACK_API_TOKEN
